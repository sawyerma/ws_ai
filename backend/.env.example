# Trading API Environment Variables
# Copy this file to .env and configure your settings

# === Database Settings ===
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=bitget
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# === Trading System Settings ===
TRADING_ENABLED=true
MAX_CONCURRENT_STRATEGIES=10
MAX_POSITION_SIZE=10.0
MAX_DRAWDOWN=0.05
RISK_CHECK_INTERVAL=1000
MIN_GRID_LEVELS=3
MAX_GRID_LEVELS=100
DEFAULT_SPREAD_PERCENTAGE=0.1

# === Bitget API Settings ===
BITGET_API_KEY=your_api_key_here
BITGET_SECRET_KEY=your_secret_key_here
BITGET_PASSPHRASE=your_passphrase_here
BITGET_SANDBOX=true

# === Infrastructure Settings ===
KAFKA_BROKERS=localhost:9092
KAFKA_CONSUMER_GROUP=trading-system
KAFKA_COMMANDS_TOPIC=trading_commands
KAFKA_MARKET_DATA_TOPIC=market_data
REDIS_URL=redis://localhost:6379

# === Security Settings ===
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === Logging ===
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s %(levelname)s %(message)s
